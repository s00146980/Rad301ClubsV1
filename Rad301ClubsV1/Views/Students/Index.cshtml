@model IEnumerable<Rad301ClubsV1.Models.ClubModel.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@* A form to post back to the same controller a search term *@
<form method="get">
    <label>First Name</label>
    <input type="search" name="FirstName" value=@ViewBag.VFname />
    <label>Surname</label>
    <input type="search" name="Surname" value=@ViewBag.VSname />
    <input type="submit" name="Search by Surname" />
</form>

<p>
    @if (User.IsInRole("Admin"))//Will only be viewable by profiles of this role
    { Html.ActionLink("Create New", "Create"); }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentID })
        </td>
    </tr>
}

</table>
